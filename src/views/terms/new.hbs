<div class="container">
    <form action="/terms/new" method="POST">
        <div class="row">
            <div class="col-xs-6 form-group">
                <label for="term">Term</label>
                <input id="term" name="term" class="form-control" placeholder="What is the term?" value="{{term}}" />
            </div>
            <div class="col-xs-6 form-group">
                <label for="tags">Tags</label>
                <input id="tags" name="tags" class="form-control" placeholder="Separate tags with spaces" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 form-group">
                <label for="definition">Definition</label>
                <textarea id="definition" name="definition" rows="10" class="form-control" placeholder="What does {{term}}{{^term}}this term{{/term}} mean?"></textarea>
            </div>
        </div>
        <div class="row text-right">
            <div class="col-md-12">
                <button class="btn btn-primary">Create</button>
            </div>
        </div>
    </form>
</div>
